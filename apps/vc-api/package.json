    "@nestjs/platform-express": "^10.0.4",
    "@nestjs/typeorm": "^10.0.0",
    "jose": "^4.14.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "better-sqlite3": "~8.4.0",
